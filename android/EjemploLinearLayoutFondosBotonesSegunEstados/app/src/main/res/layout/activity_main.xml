<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <android.widget.Button
        android:id="@+id/btEjemploCambioFormaAlPulsar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@drawable/btn_selector_shape"
        android:text="Púlsame-Cambio forma" />

    <Button
        android:id="@+id/btEjemploCambioColorAlPulsar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:backgroundTint="@color/btn_bg_color"
        android:text="Púllsame-Cambio color" />


    <android.widget.Button
        android:id="@+id/btEjemploCambioImagenFondoAlPulsar"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/btn_selector_image_bg"
        android:text="Púlsame-Cambio Imagen Fondo" />


    <Button
        android:id="@+id/btEjemploCambioColorTextoAlPulsar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Púlsame-Cambio color Texto"
        android:textColor="@color/btn_selector_texto_color" />

    <Button
        android:id="@+id/btEjemploCambioTextoAlPulsar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/p_lsame_cambio_mi_texto" />

    <TextView
        android:id="@+id/tvTituloSeparador"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="0.5"
        android:fontFamily="casual"
        android:gravity="center_horizontal"
        android:text="OTROS TIPOS DE BOTONES"
        android:textSize="22sp" />

    <ImageButton
        android:id="@+id/ivBotonCaballo"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:layout_weight="2"
        android:adjustViewBounds="true"
        android:backgroundTint="#70B370"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/cabeza_caballo" />

    <ToggleButton
        android:id="@+id/tbInterruptor"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textOff="Inactivo"
        android:textOn="Activado" />

    <EditText
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@color/tv_bg_selector"
        android:enabled="false"
        android:text="TextView" />

</LinearLayout>